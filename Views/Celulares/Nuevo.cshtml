@model LaboratorioJG.Models.ViewModels.CelularesViewModel
@{
    ViewBag.Title = "Nuevo Celular";
    List<SelectListItem> listOperadora = (List<SelectListItem>)ViewBag.ListOpeadoras;
}

<h2>@ViewBag.Title</h2>
<br />
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Nuevo", "Celulares", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.LabelFor(d => d.Marca)
            @Html.TextBoxFor(d => d.Marca, new { @class = "form-control" })
            <div style="color: red;">
                @Html.ValidationMessageFor(model => model.Marca)
            </div>
            <br /><br />

            @Html.LabelFor(d => d.Modelo)
            @Html.TextBoxFor(d => d.Modelo, new { @class = "form-control" })
            <div style="color: red;">
                @Html.ValidationMessageFor(model => model.Modelo)
            </div>
            <br /><br />

            @Html.LabelFor(d => d.Precio)
            @Html.TextBoxFor(d => d.Precio, new { @class = "form-control" })
            <div style="color: red;">
                @Html.ValidationMessageFor(model => model.Precio)
            </div>
            <br /><br />

            @Html.LabelFor(d => d.Operadora)
            @Html.DropDownList("idOperadora", listOperadora, null, new { @class = "form-control" })


            <br /><br />
            <div style="text-align: left;">
                <input type="submit" class="btn btn-success" value="Guardar " />
            </div>

        }
    </div>
</div>